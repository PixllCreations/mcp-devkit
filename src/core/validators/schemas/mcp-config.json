{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Configuration",
  "type": "object",
  "properties": {
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "type": {
          "type": "string",
          "enum": ["library", "application", "tool", "framework"]
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },
    "agents": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["openai", "anthropic", "mock", "shell"]
            },
            "model": {
              "type": "string"
            },
            "apiKey": {
              "type": "string"
            },
            "baseUrl": {
              "type": "string",
              "format": "uri"
            },
            "options": {
              "type": "object"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "validation": {
      "type": "object",
      "properties": {
        "strict": {
          "type": "boolean"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["project"],
  "additionalProperties": false
}