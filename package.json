{
  "name": "mcp-devkit",
  "version": "0.1.0",
  "description": "Claude's Persistent Development Partner - An MCP server that prevents context drift and maintains project memory",
  "main": "dist/cli/index.js",
  "bin": {
    "mcp-devkit": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "start": "node dist/cli/index.js",
    "serve": "node dist/mcp/server.js",
    "demo": "tsx scripts/demo.js",
    "demo:interactive": "tsx scripts/demo.js --interactive"
  },
  "keywords": [
    "mcp",
    "claude",
    "ai",
    "development",
    "workflow",
    "persistence",
    "model-context-protocol"
  ],
  "author": "escott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/escott/mcp-devkit.git"
  },
  "bugs": {
    "url": "https://github.com/escott/mcp-devkit/issues"
  },
  "homepage": "https://github.com/escott/mcp-devkit#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/object-schema": "^2.1.6",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "glob": "^10.3.0",
    "ora": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
